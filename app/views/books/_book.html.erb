<div id="<%= dom_id book %>" class="bg-white shadow dark:bg-gray-800 sm:rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Title</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-white"><%= book.title %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Created</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-white"><%= book.created_at.strftime("%B %d, %Y") %></dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Abstract</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-white">
          <div class="prose prose-sm max-w-none dark:prose-invert">
            <%= simple_format(truncate(book.abstract, length: 200)) %>
          </div>
        </dd>
      </div>
    </dl>
  </div>
</div>
